<!-- PAGE DE REDIRECTION EN CAS D'ERROR MOT DE PASSE -->
<div class="container">
  <div class="row">
    <div class="col-6">
      <br>
      <h2>Connexion</h2>
      <%= form_tag '/login' do %>
        <div class="form-group">
          <label>Email</label>
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Connexion</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
