<div class="container">
  <div class="row">
    <div class="col-10">
      <h1> Création de ton potin</h1>
      <%= form_for @gossip do |f| %>
        <div class="form-group">
          <label>Titre du potin</label>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label>Contenu du potin</label>
          <%= f.text_area :content, class: 'form-control' %>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Créer le potin</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
